# Database Connection
# Opção 1: Banco local (MySQL rodando localmente ou em outro container)
DB_CONNECTION_STRING=server=host.docker.internal;port=3306;database=smart_workshop;user=admin;password=yourpassword;SslMode=none;AllowPublicKeyRetrieval=True;

