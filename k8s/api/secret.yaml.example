apiVersion: v1
kind: Secret
metadata:
  name: api-secret
  namespace: smart-workshop
  labels:
    app: api
type: Opaque
stringData:
  # Database connection string
  DB_CONNECTION_STRING: "server=RDS_ENDPOINT_HERE;port=3306;database=smart_workshop;user=admin;password=YOUR_PASSWORD_HERE;SslMode=Required;"
  
  # JWT Secret Key (must be at least 32 characters)
  JWT_SECRET_KEY: "your-super-secret-key-must-be-at-least-32-characters-long-change-this"
  
  # New Relic License Key
  NEW_RELIC_LICENSE_KEY: "YOUR_NEW_RELIC_LICENSE_KEY_HERE"
